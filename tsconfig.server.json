{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2020", "DOM"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["server.ts", "src/lib/scheduler/**/*", "src/lib/db/**/*", "src/lib/utils/**/*", "src/lib/sandbox/**/*", "src/lib/notifications/**/*", "src/types/**/*"],
  "exclude": ["node_modules", ".next"]
}
